<UserControl x:Class="VisionPro.App.Views.ROIEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VisionPro.App.ViewModels"
             xmlns:core="clr-namespace:VisionPro.Core.Enums;assembly=VisionPro.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <!-- ROI Tools -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Margin="8" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="ROI Tools" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                
                <TextBlock Text="Shapes" Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11" Margin="0,8,0,4"/>
                <Button Content="â¬œ Rectangle" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddROICommand}" CommandParameter="{x:Static core:ROIType.Rectangle}"/>
                <Button Content="âšª Circle" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddROICommand}" CommandParameter="{x:Static core:ROIType.Circle}"/>
                <Button Content="â¬¡ Polygon" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddROICommand}" CommandParameter="{x:Static core:ROIType.Polygon}"/>
                
                <Separator Background="#444" Margin="0,16"/>
                
                <Button Content="ðŸ—‘ Delete Selected" Margin="0,2" Background="{StaticResource NGBrush}"
                        Command="{Binding RemoveSelectedROICommand}"/>
            </StackPanel>
        </Border>
        
        <!-- Image Canvas -->
        <Border Grid.Column="1" Background="#1A1A2A" Margin="0,8" CornerRadius="8" ClipToBounds="True">
            <Grid>
                <!-- Placeholder for Image/Canvas -->
                <TextBlock Text="Image Canvas (Not Implemented)" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <!-- Overlay ROIs -->
                <ItemsControl ItemsSource="{Binding Rois}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding Points[0]}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Points[1]}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding Color}" BorderThickness="2" 
                                    Width="{Binding Points[2]}" Height="{Binding Points[3]}"
                                    Background="Transparent">
                                <TextBlock Text="{Binding Name}" Foreground="{Binding Color}" Margin="2,-20,0,0"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        
        <!-- ROI Properties -->
        <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" Margin="0,8,8,8" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="Properties" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                           
                <!-- Properties will go here -->
                <TextBlock Text="Selected ROI:" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="{Binding SelectedROI.Name}" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
