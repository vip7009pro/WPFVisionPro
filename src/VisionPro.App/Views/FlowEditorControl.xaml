<UserControl x:Class="VisionPro.App.Views.FlowEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VisionPro.App.ViewModels"
             Background="{StaticResource BackgroundBrush}">
    

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <!-- Node Palette -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" Margin="8" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="Tool Palette" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                
                <TextBlock Text="Input/Output" Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11" Margin="0,8,0,4"/>
                <Button Content="ðŸ“· Input Image" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="InputImage"/>
                <Button Content="âœ… Final Decision" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="FinalDecision"/>
                
                <TextBlock Text="Vision Tools" Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11" Margin="0,12,0,4"/>
                <Button Content="ðŸŽ¯ Teach Match" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="TeachMatch"/>
                <Button Content="ðŸ“ Measurement" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="Measurement"/>
                <Button Content="ðŸ” Defect Detection" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="DefectDetection"/>
                
                <TextBlock Text="Processing" Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11" Margin="0,12,0,4"/>
                <Button Content="â¬œ ROI Apply" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="ROIApply"/>
                <Button Content="ðŸ“Š Threshold" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="ThresholdCompare"/>
                <Button Content="ðŸ”€ Condition" HorizontalContentAlignment="Left" Margin="0,2"
                        Command="{Binding AddNodeCommand}" CommandParameter="ConditionalBranch"/>
            </StackPanel>
        </Border>
        
        <!-- Flow Canvas -->
        <Border Grid.Column="1" Background="#1A1A2A" Margin="0,8" CornerRadius="8">
            <Grid>
                <!-- Connections Layer -->
                <ItemsControl ItemsSource="{Binding Connections}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                             <!-- Important: Don't bind Canvas.Left/Top here if the Path figures use absolute coordinates -->
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Stroke="#66FFFFFF" StrokeThickness="3">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{Binding StartPoint}">
                                            <BezierSegment Point1="{Binding ControlPoint1}" 
                                                           Point2="{Binding ControlPoint2}" 
                                                           Point3="{Binding EndPoint}"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Nodes Layer -->
                <ItemsControl ItemsSource="{Binding Nodes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="Transparent"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid MinWidth="140">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Input Ports (Left) -->
                                <ItemsControl Grid.Column="0" ItemsSource="{Binding InputPorts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="10" Height="10" Fill="Yellow" Margin="-5,4,2,4" 
                                                     Stroke="Black" StrokeThickness="1"
                                                     ToolTip="{Binding Name}"
                                                     Tag="{Binding}"
                                                     Cursor="Hand"
                                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                                     MouseLeftButtonUp="Port_MouseUp"
                                                     MouseMove="Port_MouseMove"
                                                     MouseEnter="Port_MouseEnter"
                                                     MouseLeave="Port_MouseLeave"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Node Body -->
                                <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                                        BorderBrush="{StaticResource PrimaryBrush}"
                                        BorderThickness="2" CornerRadius="6" Padding="12,8"
                                        Cursor="SizeAll"
                                        MouseLeftButtonDown="Node_MouseLeftButtonDown"
                                        MouseLeftButtonUp="Node_MouseLeftButtonUp"
                                        MouseMove="Node_MouseMove">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding NodeType}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="10" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Output Ports (Right) -->
                                <ItemsControl Grid.Column="2" ItemsSource="{Binding OutputPorts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="10" Height="10" Fill="LimeGreen" Margin="2,4,-5,4" 
                                                     Stroke="Black" StrokeThickness="1"
                                                     ToolTip="{Binding Name}"
                                                     Tag="{Binding}"
                                                     Cursor="Hand"
                                                     MouseLeftButtonDown="Port_MouseLeftButtonDown"
                                                     MouseLeftButtonUp="Port_MouseUp"
                                                     MouseMove="Port_MouseMove"
                                                     MouseEnter="Port_MouseEnter"
                                                     MouseLeave="Port_MouseLeave"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Temporary Connection Path -->
                <Path x:Name="TempConnectionPath" Stroke="White" StrokeThickness="2" StrokeDashArray="4 2" Visibility="Collapsed">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure x:Name="TempConnectionFigure">
                                <BezierSegment x:Name="TempConnectionBezier"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                
                <!-- Flow Name -->
                <Border Background="#88000000" CornerRadius="4" Padding="8"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                    <TextBlock Text="{Binding FlowName}" Foreground="White" FontWeight="SemiBold"/>
                </Border>
                
                <!-- Toolbar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8">
                    <Button Content="ðŸ’¾ Save" Margin="4,0" Command="{Binding SaveFlowCommand}"/>
                    <Button Content="ðŸ“‚ Load" Margin="4,0" Command="{Binding LoadFlowCommand}"/>
                    <Button Content="ðŸ—‘ Delete" Margin="4,0" Background="{StaticResource NGBrush}"
                            Command="{Binding RemoveSelectedNodeCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Properties Panel -->
        <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" Margin="0,8,8,8" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock Text="Node Properties" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                
                <TextBlock Text="Selected Node" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                <Border Background="#333344" CornerRadius="4" Padding="12,8" Margin="0,0,0,12">
                    <TextBlock Text="{Binding SelectedNode.Name, FallbackValue='None'}" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>
                
                <TextBlock Text="Node Type" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                <Border Background="#333344" CornerRadius="4" Padding="12,8" Margin="0,0,0,12">
                    <TextBlock Text="{Binding SelectedNode.NodeType, FallbackValue='--'}" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>
                
                <TextBlock Text="Position" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="{StaticResource TextPrimaryBrush}">
                        <Run Text="X: "/><Run Text="{Binding SelectedNode.X, StringFormat='{}{0:F0}', FallbackValue='--'}"/>
                    </TextBlock>
                    <TextBlock Grid.Column="1" Foreground="{StaticResource TextPrimaryBrush}">
                        <Run Text="Y: "/><Run Text="{Binding SelectedNode.Y, StringFormat='{}{0:F0}', FallbackValue='--'}"/>
                    </TextBlock>
                </Grid>
                
                <Separator Background="#444" Margin="0,8"/>
                
                <TextBlock Text="Node Preview" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,12,0,8"/>
                
                <Border Background="#222233" Height="150" CornerRadius="4">
                    <TextBlock Text="Select a node to see preview" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
