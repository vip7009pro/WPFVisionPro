<UserControl x:Class="VisionPro.App.Views.Config.FinalDecisionConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Configuration Section -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Decision Logic" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                
                <TextBlock Text="Logic Type" Foreground="{StaticResource TextSecondaryBrush}"/>
                <ComboBox ItemsSource="{Binding LogicTypes}" SelectedItem="{Binding LogicType}" Margin="0,5,0,15"/>

                <TextBlock Text="Display Settings" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,10,0,10"/>
                
                <CheckBox Content="Show Result Overlay" IsChecked="{Binding ShowOverlay}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,5,0,10"/>
                
                <TextBlock Text="Overlay Opacity" Foreground="{StaticResource TextSecondaryBrush}"/>
                <Slider Minimum="0" Maximum="1" Value="{Binding OverlayOpacity}" Margin="0,5,0,10"/>

                <Border Background="{Binding InspectionStatus, Converter={StaticResource StatusToBrushConverter}}" 
                        Padding="15" CornerRadius="5" Margin="0,20,0,0">
                    <TextBlock Text="{Binding InspectionStatus}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Preview Section -->
        <Border Grid.Column="1" Background="#111" Margin="10,0,0,0" CornerRadius="8">
            <Grid>
                <Image Source="{Binding ResultImage, Converter={StaticResource ByteArrayToImageConverter}}" Stretch="Uniform"/>
                
                <!-- Placeholder for Overlay logic visualization -->
                <Canvas Visibility="{Binding ShowOverlay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Overlay elements would be dynamically added here based on measurements -->
                </Canvas>

                <TextBlock Text="Final Inspection Preview" Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
