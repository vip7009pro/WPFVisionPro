<Window x:Class="VisionPro.App.Dialogs.NodeConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Node Configuration" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding NodeType}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>
        
        <!-- Configuration Content - Placeholder for now -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16">
            <ContentControl Content="{Binding ConfigurationContent}"/>
        </Border>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Save" Width="100" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
